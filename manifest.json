
{
  "manifest_version": 3,
  "name": "Bhasa Setu",
  "version": "1.0",
  "description": "Translate webpage content from English to Hindi",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "Translate this page to Hindi",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon(1).png",
      "128": "icons/icon(2).png"
    }
  }
}
